<div>
  <h2 class="mt-3">Ecouter une aventure</h2>

  <div class="spacer d-flex justify-content-center"></div>
  <div class="d-flex justify-content-center mt-3 mb-4">
    <p class="paragraphe-switch">Carte</p>
    <label id="switch" class="switch">
      <input type="checkbox">
      <span class="slider round"></span>
    </label>
    <p class="paragraphe-switch">Thèmes</p>
  </div>

  <div id="filter-view" style="display: none">
    <%= render "filter" %>
  </div>

  <div id="map-view">
    <%= render "map" %>
  </div>

  <h2 class="mt-5">Les plus écoutés</h2>

  <% @podcasts.limit(5).each do |podcast| %>
    <%= link_to podcast_path(podcast) do %>
    <div class="card-podcast">
      <div class="podcast-img-container">
        <%= image_tag "components/play-card-podcast.svg", class: "play-btn" %>
        <%= cl_image_tag podcast.photo.key, class: "podcast-img-illu" %>
      </div>
      <div class="card-txts">
        <div class="signature">
          <p><%= podcast.portrait.title %></p>
        </div>
        <div class="citation-card">
          <p><%= podcast.title %></p>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
