<div class="container">
<h2 class="titlelogin">Se connecter</h2>

  <div class= "new_cast">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="minicastform">
        <%= f.input :email, required: false, autofocus: true, placeholder: "bob@gmail.com",input_html: { autocomplete: "email" } %>
        <%= f.input :password, label: "Mot de passe", required: false, placeholder: "* * * * ",input_html: { autocomplete: "mot de passe" } %>
        <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions text-center">
        <%= f.button :submit, "SE CONNECTER", class: "btn-master" %>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
