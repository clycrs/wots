<div class="container">
<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="minicastform">
    <%= f.input :email, required: false, autofocus: true, placeholder: "bob@gmail.com",input_html: { autocomplete: "email" } %>
    <%= f.input :password, required: false, placeholder: "* * * * ",input_html: { autocomplete: "mot de passe" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn-master" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
</div>