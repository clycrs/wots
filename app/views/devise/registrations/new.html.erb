<div class="container">
<h2 class="titlelogin">S'inscrire</h2>

<div class= "new_cast">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="minicastform">
      <%= f.input :first_name,
                  label: "PrÃ©nom",
                  required: true,
                  autofocus: true,
                  placeholder: "bob",
                  input_html: { autocomplete: "PrÃ©nom" }%>
      <div class="minicastform">
      <%= f.input :last_name,
                label: "Nom",
                required: true,
                autofocus: true,
                placeholder: "Morane",
                input_html: { autocomplete: "Nom de famille" }%>
      <%= f.input :description,
                required: true,
                autofocus: true,
                placeholder: "Grande navigatrice, je suis ici pour...",
                input_html: { autocomplete: "Description" }%>
      <%= f.input :photo, as: :file %>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  placeholder: "bob@gmail.com",
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  label: "Mot de passe",
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  placeholder: "* * * *",
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: "Confirmation du mot de passe",
                  required: true,
                  placeholder: "* * * *",
                  input_html: { autocomplete: "new-password" } %>
    </div>
    <div class="form-actions text-center">
      <%= f.button :submit, "VALIDER", class: "btn-master" %>
    </div>
  <% end %>
</div>

<%#= render "devise/shared/links" %>
</div>
