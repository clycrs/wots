
  <div class="container podcast-show text-center" id="show-container">
  <h1>#<%= @index_podcast %></h1>

  <h2><%= @podcast.title %></h2>

    <p style= "color:black"> par l'équipe Women of the Seas </p>

    <div>
      <button type="button" class="btn btn-default" aria-label="Left Align">
        <%= link_to "<<", podcast_path(@previous_podcast) %>
        <% if @previous_podcast = 0 %>
          <%= m %>
        <span class= "glyphicon glyphicon-triangle-left" aria-hidden="true"></span>
      </button>
      <%= cl_image_tag @podcast.photo.key, width: 350, height: 300, crop: :fill %>
      <button type="button" class="btn btn-default" aria-label="Left Align">
        <%= link_to ">>", podcast_path(@next_podcast) %>
        <span class= "glyphicon glyphicon-triangle-right" aria-hidden="true"></span>
      </button>
    </div>

    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item1">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">PODCAST</a>
      </li>
      <li class="nav-item1">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">PORTRAIT</a>
      </li>
      <li class="nav-item1">
        <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">COMMENTAIRES</a>
      </li>
    </ul>

    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab"><%= @podcast.description %></div>
      <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab"><%= @podcast.portrait.description %></div>
      <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">"Très intéressant, hâte d'entendre le deuxième épisode !"</div>
    </div>

    <h2> <iframe src=<%= @podcast.url %> frameBorder="0" width="100%" height="110px" allow="autoplay"></iframe></h2>

  </div>

