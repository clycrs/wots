<body style="background-color:white;">
  <div class="container podcast-show text-center" id="show-container">
    <div class="podcast-header">
      <p class= "index_podcast">#<%= @index_podcast %></p>
      <h2>"<%= @podcast.title %>"</h2>
      <p> par l'équipe Women of the Seas </p>
    </div>

    <div class="d-flex justify-content-center mt-3 mb-3 podcast-placeholder">
      <button type="button" class="btn btn-default" aria-label="Left Align">
        <%= link_to "◀", podcast_path(@previous_podcast), class: "wave" %>
        <span class= "glyphicon glyphicon-triangle-left" aria-hidden="true"></span>
      </button>

      <%= cl_image_tag @podcast.photo.key, width: 350, height: 300, crop: :fill %>

      <button type="button" class="btn btn-default" aria-label="Left Align">
        <%= link_to "▶", podcast_path(@next_podcast), class: "wave"%>
        <span class= "glyphicon glyphicon-triangle-right" aria-hidden="true"></span>
      </button>
    </div>

    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item1">
        <a class="nav-link active" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">PORTRAIT</a>
      </li>
      <li class="nav-item1">
        <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">COMMENTAIRES</a>
      </li>
    </ul>

    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade show active" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
      <%= @podcast.portrait.description %>
      </div>

      <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
      
      <% @comments.each do |comment|  %>      
      <div> <strong><%=comment.user.first_name%></strong> <%= comment.content  %></div>      
      <%end%>
      
      <%= simple_form_for [@podcast, @comment] do |f| %>
      <div class="add-comment">
        <%= f.input :content, label: "Ajouter un commentaire" %>
      </div>
      
        <div class="form-actions text-center">
          <%= f.button :submit, "COMMENTER", class: "btn-master" %>
        </div>
      <%end%>

      </div>
    </div>

    <iframe src=<%= @podcast.url %> frameBorder=0 width="100%" height="110px" allow="autoplay"></iframe>

  </div>
</body>
